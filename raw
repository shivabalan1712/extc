        android:id="@+id/Name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:inputType="text"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Marks:"
        android:textSize="20sp" />
