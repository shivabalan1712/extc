        android:id="@+id/Update"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:text="Update"
        android:textSize="30dp" />
    <Button
        android:id="@+id/View"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:text="View"
        android:textSize="30dp" />
    <Button
        android:id="@+id/ViewAll"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:text="View All"
        android:textSize="30dp" />
</LinearLayout>



