<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:background="@drawable/card_background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/categoryIconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/transactionAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/categoryIconImageView"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/transactionDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/categoryIconImageView"
        android:layout_marginStart="16dp"
        android:layout_below="@id/transactionAmountTextView"
        android:textSize="14sp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/editTransactionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_edit"
        android:contentDescription="Edit Transaction"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

    <ImageView
        android:id="@+id/deleteTransactionImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/editTransactionImageView"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_delete"
        android:contentDescription="Delete Transaction"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground" />

</RelativeLayout>
